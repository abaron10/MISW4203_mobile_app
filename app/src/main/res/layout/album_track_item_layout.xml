<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="track" type="com.example.vinilos.models.Track"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@color/vinilos_dark_gray">

        <com.google.android.material.textview.MaterialTextView
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/track_item_name"
            android:text="@{track.name}"/>

        <com.google.android.material.textview.MaterialTextView
            android:textColor="@color/vinilos_light_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/track_item_duration"
            android:text="@{track.duration}" />
    </LinearLayout>
</layout>